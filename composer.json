{
    "name": "ajgarlag/openid-connect-provider-bundle",
    "type": "symfony-bundle",
    "description": "OpenID Connect provider Symfony bundle",
    "keywords": ["openid", "connect", "oidc", "provider", "authentication", "bundle", "auth", "bundle"],
    "homepage": "https://github.com/ajgarlag/openid-connect-provider-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Antonio J. Garc√≠a Lagar",
            "email": "aj@garcialagar.es"
        },
        {
            "name": "All contributors",
            "homepage": "https://github.com/ajgarlag/openid-connect-provider-bundle/graphs/contributors"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-openssl": "*",
        "league/oauth2-server-bundle": "^1",
        "steverhoades/oauth2-openid-connect-server": "^3.0.1",
        "symfony/twig-bundle": "^6.4|^7.2"
    },
    "require-dev": {
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "dg/bypass-finals": "^1.9",
        "doctrine/doctrine-bundle": "^2.11.0",
        "doctrine/orm": "^2.14|^3.0",
        "nyholm/symfony-bundle-test": "^3.0",
        "php-cs-fixer/shim": "^3.38",
        "phpstan/phpstan": "^2",
        "phpstan/phpstan-symfony": "^2",
        "rector/rector": "^2.1",
        "symfony/browser-kit": "^6.4|^7.2",
        "symfony/phpunit-bridge": "^7.4"
    },
    "autoload": {
        "psr-4": { "Ajgarlag\\Bundle\\OpenIDConnectProviderBundle\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Ajgarlag\\Bundle\\OpenIDConnectProviderBundle\\Tests\\": "tests/",
            "League\\Bundle\\OAuth2ServerBundle\\Tests\\": "vendor/league/oauth2-server-bundle/tests/"
        }
    },
    "config": {
        "preferred-install": {
            "league/oauth2-server-bundle": "source"
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    },
    "minimum-stability": "dev"
}
